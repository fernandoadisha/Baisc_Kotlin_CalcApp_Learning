<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="operatorRow">
        <item name="android:layout_weight">0.7</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="buttonOperatorSet1">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/red</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/teal</item>
        <item name="android:onClick">operationAction</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="buttonOperatorSet2">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/orange</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">operationAction</item>
        <item name="android:layout_margin">3dp</item>
    </style>

</resources>